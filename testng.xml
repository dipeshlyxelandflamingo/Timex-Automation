<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Timex Suite" preserve-order="true">

    <listeners>
        <listener class-name="Listeners.TestListener"/>
    </listeners>

    <!-- ✅ HOME -->
    <test name="01 - HOME (Homepage group)">
        <groups>
            <run>
                <include name="Homepage"/>
            </run>
        </groups>
        <classes>
            <class name="TestPages.HomeTest"/>
        </classes>
    </test>

    <!-- ✅ PLP -->
    <test name="02 - PLP (PLP group)">
        <groups>
            <run>
                <include name="PLP"/>
            </run>
        </groups>
        <classes>
            <class name="TestPages.PLPTest"/>
        </classes>
    </test>

    <!-- ✅ PDP -->
    <test name="03 - PDP (PDP group)">
        <groups>
            <run>
                <include name="PDP"/>
            </run>
        </groups>
        <classes>
            <class name="TestPages.PDPTest"/>
        </classes>
    </test>

    <!-- ✅ MINICART -->
    <test name="04 - MINICART (MiniCart group)">
        <groups>
            <run>
                <include name="MiniCart"/>
            </run>
        </groups>
        <classes>
            <class name="TestPages.MiniCartTest"/>
        </classes>
    </test>

    <!-- ✅ CHECKOUT -->
    <test name="05 - CHECKOUT (CheckOut group)">
        <groups>
            <run>
                <include name="CheckOut"/>
            </run>
        </groups>
        <classes>
            <class name="TestPages.CheckOutTest"/>
        </classes>
    </test>

    <!-- ✅ E2E -->
    <test name="06 - E2E (E2E group)">
        <groups>
            <run>
                <include name="E2E"/>
            </run>
        </groups>
        <classes>
            <class name="TestPages.E2ETest"/>
        </classes>
    </test>

</suite>